<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.segunfamisa.sample.bottomnav.action">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Send Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="77dp"
            android:layout_marginStart="77dp"
            android:layout_marginTop="34dp"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textColor="@color/secondary_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColorLink="@android:color/holo_orange_light" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                app:srcCompat="@drawable/whatsapp"
                android:id="@+id/imageButton3"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/message"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageButton2"
                android:layout_weight="1"
                android:layout_height="65dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                app:srcCompat="@drawable/newmessageslidebtn"
                android:id="@+id/imageButton4"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/newmessage"
                android:id="@+id/imageButton5"
                android:layout_weight="1"
                android:layout_height="65dp" />
        </LinearLayout>

        <TextView
            android:text="Resources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView10"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    </RelativeLayout>
</FrameLayout>
